<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="0px">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#444444"/>
        </shape>
    </item>
    <item android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#b8b8b8"/>
        </shape>
    </item>
    <item android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
               android:startColor="#a1a1a1"
               android:endColor="#7a7a7a"
               android:type="linear"
               android:angle="270"
               android:useLevel="false"/>
        </shape>
    </item>
</layer-list>