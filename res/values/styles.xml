<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Theme" parent="android:Theme"></style>
    <style name="Theme.Consy" parent="android:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="Spring">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="FullWidth">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    </style>
    <style name="FullHeight">
    	<item name="android:layout_height">fill_parent</item>
    	<item name="android:layout_width">wrap_content</item>
    </style>
    <style name="WrapAll">
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    </style>
    <style name="FillAll">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="FormElementTitle" parent="WrapAll">
    	<item name="android:textSize">18dp</item>
    	<item name="android:paddingRight">5dp</item>
    </style>
    <style name="FormElementValue" parent="FormElementTitle">
    	<item name="android:textStyle">italic</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="ActionBarFrame">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/actionbar_height</item>
    </style>
        <style name="ActionBarBackground">
            <item name="android:layout_width">fill_parent</item>
            <item name="android:layout_height">@dimen/actionbar_height</item>
            <item name="android:background">@drawable/actionbar_bg</item>
        </style>
        <style name="ActionBar">
            <item name="android:layout_width">fill_parent</item>
            <item name="android:layout_height">@dimen/actionbar_height</item>
            <item name="android:orientation">horizontal</item>
            <item name="android:gravity">center_vertical</item>
        </style>
		    <style name="ActionBarLogo">
		        <item name="android:layout_width">wrap_content</item>
		        <item name="android:layout_height">wrap_content</item>
		        <item name="android:src">@drawable/logo</item>
		    </style>
		    <style name="ActionBarAction">
		        <item name="android:layout_width">@dimen/actionbar_height</item>
		        <item name="android:layout_height">fill_parent</item>
		        <item name="android:clickable">true</item>
		        <item name="android:padding">@dimen/title_action_padding</item>
		    </style>
		    <style name="ActionBarSpinner" parent="@android:style/Widget.ProgressBar.Small">
		        <item name="android:layout_width">@dimen/actionbar_height</item>
		        <item name="android:layout_height">fill_parent</item>
		        <item name="android:clickable">true</item>
		        <item name="android:padding">@dimen/title_action_padding</item>
		    </style>
		    <style name="ActionBarSeparator">
		        <item name="android:layout_width">2px</item>
		        <item name="android:layout_height">@dimen/actionbar_height</item>
	            <item name="android:src">@drawable/actionbar_seperator</item>
		    </style>
    
    <style name="Dashboard" parent="FullWidth">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">400dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:padding">2dp</item>
    </style>
	    <style name="DashboardRow" parent="FullWidth">
	        <item name="android:orientation">horizontal</item>
	        <item name="android:layout_weight">1</item>
	        <item name="android:padding">6dp</item>
	    </style>
		    <style name="DashboardButton">
		        <item name="android:layout_gravity">center_vertical</item>
		        <item name="android:layout_width">96dp</item>
		        <item name="android:layout_height">wrap_content</item>
                <item name="android:layout_weight">1</item>
                <item name="android:layout_margin">2dp</item>
		        <item name="android:gravity">center_horizontal</item>
		        <item name="android:textSize">14sp</item>
                <item name="android:textStyle">normal</item>
                <item name="android:textColor">@color/text_grey</item>
		        <item name="android:background">@null</item>
		    </style>
        <style name="DashboardExtra" parent="FullWidth">
            <item name="android:layout_weight">1</item>
            <item name="android:layout_height">300dp</item>
            <item name="android:background">@color/consy_dark_green</item>
        </style>
            <style name="DashboardExtraBackgroundTop" parent="FullWidth">
                <item name="android:layout_height">5dp</item>
                <item name="android:background">@drawable/dashboard_extra_top</item>
            </style>
            <style name="DashboardExtraMap" parent="FillAll">
                <item name="android:layout_weight">1</item>
            </style>
    
    <style name="EventListHeadingWrapper" parent="FullWidth">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">31dp</item>
    </style>
	    <style name="EventListHeading" parent="FullWidth">
	        <item name="android:orientation">horizontal</item>
	        <item name="android:layout_height">30dp</item>
	    </style>
	        <style name="EventListHeadingArrow">
	            <item name="android:layout_width">30dp</item>
	            <item name="android:layout_height">30dp</item>
	            <item name="android:layout_marginRight">5dp</item>
	            <item name="android:paddingTop">7dp</item>
	            <item name="android:paddingBottom">10dp</item>
	            <item name="android:paddingLeft">6dp</item>
	            <item name="android:paddingRight">5dp</item>
	            <item name="android:gravity">center</item>
	        </style>
	        <style name="EventListHeadingText" parent="WrapAll">
	            <item name="android:textSize">18sp</item>
	            <item name="android:textStyle">bold</item>
	        </style>
        <style name="EventListHeadingBorder">
            <item name="android:layout_height">1dp</item>
            <item name="android:layout_width">fill_parent</item>
            <item name="android:background">@color/light_grey</item>
        </style>
    
    <style name="EventListItem" parent="FullWidth">
    	<item name="android:padding">5dp</item>
        <item name="android:layout_height">60dp</item>
    	<item name="android:textSize">16sp</item>
    </style>
	    <style name="EventListItemAvatar">
	    	<item name="android:layout_width">50dp</item>
	    	<item name="android:layout_height">50dp</item>
	    </style>
	    <style name="EventListItemTextSection" parent="FillAll">
	    	<item name="android:orientation">vertical</item>
	    </style>
		    <style name="EventListItemTextSectionTop" parent="FullWidth">
		    	<item name="android:paddingLeft">5dp</item>
	    		<item name="android:orientation">horizontal</item>
		    </style>
		    <style name="EventListItemTextSectionBottom" parent="FullWidth">
		    	<item name="android:paddingLeft">5dp</item>
	    		<item name="android:orientation">horizontal</item>
		    </style>
	    <style name="EventListItemText" parent="WrapAll"></style>
		    <style name="EventListItemTextTop" parent="EventListItemText">
		    	<item name="android:textSize">16sp</item>
		    </style>
		    <style name="EventListItemUsername" parent="EventListItemTextTop">
		    	<item name="android:textStyle">bold</item>
		    	<item name="android:textColor">@color/link_blue</item>
		    </style>
	    <style name="EventListItemDesc" parent="EventListItemText">
	    	<item name="android:textColor">#666666</item>
	    	<item name="android:textSize">14sp</item>
	    </style>
	
    <style name="EventNew" parent="FullWidth">
   		<item name="android:padding">5dp</item>
    </style>
	    <style name="EventNewTitle" parent="FullWidth">
        	<item name="android:orientation">vertical</item>
	    	<item name="android:paddingTop">10dp</item>
	    	<item name="android:paddingBottom">5dp</item>
	    </style>
		    <style name="EventNewTitleText" parent="FullWidth">
		    	<item name="android:textSize">16sp</item>
		    	<item name="android:textStyle">bold</item>
		    	<item name="android:textColor">#000000</item>
		    </style>
		    <style name="EventNewTitleBorder">
		    	<item name="android:layout_height">2dp</item>
		    	<item name="android:layout_width">fill_parent</item>
		    	<item name="android:background">#ff000000</item>
		    </style>
	    <style name="EventNewField" parent="FullWidth">
	    </style>
		    <style name="EventNewBroadcast" parent="EventNewField">
        		<item name="android:orientation">horizontal</item>
		    </style>
			    <style name="EventNewBroadcastText" parent="FormElementTitle">
			    	<item name="android:gravity">center_vertical</item>
			    </style>
    
    <style name="EventView" parent="FillAll">
   		<item name="android:padding">5dp</item>
    </style>
	    <style name="EventViewTop" parent="FullWidth">
       		<item name="android:orientation">horizontal</item>
	    </style>
		    <style name="EventViewAvatar">
		    	
		    	<item name="android:layout_margin">5dp</item>
		    	<item name="android:layout_width">100dp</item>
		    	<item name="android:layout_height">100dp</item>
		    </style>
		    <style name="EventViewTopRight" parent="FullWidth">
	       		<item name="android:orientation">vertical</item>
		    </style>
			    <style name="EventViewWhere" parent="WrapAll">
			    	<item name="android:textSize">24sp</item>
			    	<item name="android:textStyle">bold</item>
			    </style>
			    <style name="EventViewWhen" parent="WrapAll">
			    	<item name="android:textSize">16sp</item>
			    </style>
			    <style name="EventViewWhat" parent="WrapAll">
			    	<item name="android:textSize">14sp</item>
			    </style>
	    <style name="EventViewAttend" parent="FullWidth">
	    	<item name="android:textSize">14sp</item>
	    </style>
    
    <style name="AttendantsListItem" parent="FullWidth">
        <item name="android:padding">5dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">16sp</item>
    </style>
        <style name="AttendantsListItemAvatar">
            <item name="android:layout_width">50dp</item>
            <item name="android:layout_height">50dp</item>
        <item name="android:paddingRight">5dp</item>
        </style>
        <style name="AttendantsListItemTextSection" parent="FillAll">
            <item name="android:orientation">vertical</item>
        </style>
	        <style name="AttendantsListItemText" parent="WrapAll"></style>
	            <style name="AttendantsListItemUsername" parent="AttendantsListItemText">
	                <item name="android:textStyle">bold</item>
	                <item name="android:textColor">@color/link_blue</item>
	            </style>
	        <style name="AttendantsListItemStatus" parent="AttendantsListItemText">
	            <item name="android:textColor">#666666</item>
	            <item name="android:textSize">14sp</item>
	        </style>
     
     
     
</resources>