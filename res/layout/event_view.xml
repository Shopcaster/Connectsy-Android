<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/FullWidth"
    android:orientation="vertical" >
    <FrameLayout style="@style/ActionBarFrame">
        <ImageView style="@style/ActionBarBackground" />
        <LinearLayout style="@style/ActionBar" >
            <ImageView style="@style/ActionBarLogo" />
            
            <View style="@style/Spring" />
            
            <ImageView style="@style/ActionBarSeparator" />
            <ImageView style="@style/ActionBarAction"
                android:id="@+id/ab_refresh"
                android:src="@drawable/icons_refresh" />
            <ProgressBar style="@style/ActionBarAction"
                android:id="@+id/ab_refresh_spinner"
                android:src="@drawable/icons_refresh"
                android:visibility="gone" />
        
            <ImageView style="@style/ActionBarSeparator" />
            <ImageView style="@style/ActionBarAction"
                android:id="@+id/ab_profile"
                android:src="@drawable/icons_profile" />
            
            <ImageView style="@style/ActionBarSeparator" />
            <ImageView style="@style/ActionBarAction"
                android:id="@+id/ab_new_event"
                android:src="@drawable/icons_plus" />
        </LinearLayout>
    </FrameLayout>
	
	<LinearLayout style="@style/EventViewTop" >
	
		<ImageView style="@style/EventViewAvatar"
    		android:src="@drawable/avatar_default"
			android:id="@+id/event_view_avatar" />
			
		<LinearLayout style="@style/EventViewTopRight" >
		
			<TextView style="@style/EventViewWhere"
				android:id="@+id/event_view_where" />
			<TextView style="@style/EventViewWhen"
				android:id="@+id/event_view_when" />
			<TextView style="@style/EventViewWhat"
				android:id="@+id/event_view_what" />
			
		</LinearLayout>
	</LinearLayout>
	
	<Button style="@style/EventViewAttend"
		android:text="@string/event_view_attend"
		android:id="@+id/event_view_attend" />
	
	
	<ListView android:id="@+id/event_view_attendants"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent" />
	
    <ListView android:id="@+id/attendants_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    
</LinearLayout>