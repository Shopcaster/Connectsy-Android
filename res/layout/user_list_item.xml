<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/FillAll"
    android:orientation="horizontal"
    android:padding="5dp">
    
    <CheckBox style="@style/WrapAll"
        android:id="@+id/user_list_item_select"
        android:visibility="gone" />
    
    <ImageView style="@style/UserListItemAvatar"
        android:src="@drawable/avatar_default"
        android:id="@+id/user_list_item_avatar" />
    
    <LinearLayout style="@style/UserListItemMiddle">
	    <TextView style="@style/UserListItemUsername"
	        android:id="@+id/user_list_item_username"
	        android:clickable="true" />
    </LinearLayout>
    
    <Button style="@style/UserListItemConfirm"
        android:id="@+id/user_list_item_confirm"
        android:text="confirm"
        android:clickable="true" />
    
</LinearLayout>