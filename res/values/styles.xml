<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Theme" parent="android:Theme"></style>
    <style name="Theme.Consy" parent="android:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="Spring">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="VerticalSpring">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="FullWidth">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    </style>
    <style name="FullHeight">
    	<item name="android:layout_height">fill_parent</item>
    	<item name="android:layout_width">wrap_content</item>
    </style>
    <style name="WrapAll">
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    </style>
    <style name="FillAll">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="Main" parent="FillAll">
        <item name="android:background">@color/main_background</item>
    </style>
    
    <style name="Text" parent="WrapAll">
        <item name="android:textColor">@color/text_grey</item>
    </style>
	    <style name="DeemphisizedText" parent="Text">
	        <item name="android:textSize">12sp</item>
	        <item name="android:textColor">@color/text_light_grey</item>
	    </style>
    
    <style name="FormElementTitle" parent="Text">
    	<item name="android:textSize">18dp</item>
    	<item name="android:paddingRight">5dp</item>
    </style>
    <style name="FormElementValue" parent="FormElementTitle">
    	<item name="android:textStyle">italic</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="Image" parent="WrapAll">
        <item name="android:background">@drawable/image_bg</item>
    </style>
	    <style name="Avatar" parent="Image">
            <item name="android:layout_marginRight">5dp</item>
	        <item name="android:layout_width">wrap_content</item>
	        <item name="android:layout_height">wrap_content</item>
            <item name="android:maxWidth">50dp</item>
            <item name="android:maxHeight">50dp</item>
	        <item name="android:adjustViewBounds">true</item>
	    </style>
    
    <style name="Button" parent="WrapAll">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
	    <item name="android:shadowColor">#ffffff</item>
	    <item name="android:shadowDx">0</item>
	    <item name="android:shadowDy">2</item>
	    <item name="android:shadowRadius">2</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">10dp</item>
    </style>
    
    <style name="Toggle" parent="FullWidth">
        <item name="android:orientation">horizontal</item>
    </style>
        <style name="ToggleButton" parent="Button">
            <item name="android:layout_margin">0dp</item>
            <item name="android:textColor">@color/toggle_text_color</item>
            <item name="android:layout_width">fill_parent</item>
            <item name="android:layout_weight">1</item>
        </style>
            <style name="ToggleLeft" parent="ToggleButton">
                <item name="android:background">@drawable/toggle_button_left</item>
            </style>
            <style name="ToggleMiddle" parent="ToggleButton">
                <item name="android:background">@drawable/toggle_button_middle</item>
            </style>
            <style name="ToggleRight" parent="ToggleButton">
                <item name="android:background">@drawable/toggle_button_right</item>
            </style>
    
    <style name="TabBar" parent="FullWidth">
        <item name="android:orientation">horizontal</item>
    </style>
        <style name="TabBarButton" parent="FullWidth">
            <item name="android:layout_margin">0dp</item>
            <item name="android:layout_weight">1</item>
	        <item name="android:textColor">@color/text_grey</item>
	        <item name="android:textStyle">bold</item>
	        <item name="android:textSize">16sp</item>
            <item name="android:gravity">center</item>
            <item name="android:padding">10dp</item>
            <item name="android:background">@color/main_background</item>
        </style>
        <style name="TabBarButtonLeft" parent="TabBarButton">
            <item name="android:background">@drawable/tabbar_button_left</item>
        </style>
        <style name="TabBarButtonMiddle" parent="TabBarButton">
            <item name="android:background">@drawable/tabbar_button_middle</item>
        </style>
        <style name="TabBarButtonRight" parent="TabBarButton">
            <item name="android:background">@drawable/tabbar_button_right</item>
        </style>
    
    <style name="RadioButton">
        <item name="android:layout_height">13dp</item>
        <item name="android:layout_width">13dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/radio_button</item>
    </style>
    
    <style name="BorderWrapperVert" parent="FullWidth">
        <item name="android:orientation">vertical</item>
    </style>
	    <style name="BorderVert" parent="FullWidth">
            <item name="android:layout_height">1dp</item>
            <item name="android:background">#ffcccccc</item>
	    </style>
	    
    <style name="Heading" parent="FullWidth">
        <item name="android:orientation">vertical</item>
    </style>
        <style name="HeadingText" parent="FullWidth">
            <item name="android:textSize">20sp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textColor">@color/text_grey</item>
	        <item name="android:padding">10dp</item>
        </style>
        <style name="HeadingBorder">
            <item name="android:layout_height">1dp</item>
            <item name="android:layout_width">fill_parent</item>
            <item name="android:background">#ff999999</item>
        </style>
        
    <style name="ListTitle" parent="FullWidth">
        <item name="android:orientation">vertical</item>
    </style>
        <style name="ListTitleText" parent="FullWidth">
            <item name="android:textSize">16sp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textColor">#000000</item>
            <item name="android:paddingRight">5dp</item>
            <item name="android:paddingLeft">5dp</item>
            <item name="android:background">#66eeeeee</item>
        </style>
        <style name="ListTitleBorder">
            <item name="android:layout_height">1dp</item>
            <item name="android:layout_width">fill_parent</item>
            <item name="android:background">#ffcccccc</item>
        </style>
        <style name="ListTitleBorderTop" parent="ListTitleBorder">
            <item name="android:background">#ff999999</item>
        </style>
       
    <style name="Link" parent="WrapAll">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/link_blue</item>
    </style>
    
    <style name="ActionBarFrame">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/actionbar_height</item>
        <item name="android:focusable">true</item>
    </style>
        <style name="ActionBarBackground">
            <item name="android:layout_width">fill_parent</item>
            <item name="android:layout_height">@dimen/actionbar_height</item>
            <item name="android:background">@drawable/actionbar_bg</item>
        </style>
        <style name="ActionBar">
            <item name="android:layout_width">fill_parent</item>
            <item name="android:layout_height">@dimen/actionbar_height</item>
            <item name="android:orientation">horizontal</item>
            <item name="android:gravity">center_vertical</item>
        </style>
            <style name="ActionBarLogo" parent="@style/WrapAll">
                <item name="android:src">@drawable/ab_logo</item>
                <item name="android:layout_marginTop">1dp</item>
                <item name="android:layout_marginLeft">5dp</item>
            </style>
            <style name="ActionBarSearch" parent="@style/FullWidth">
                <item name="android:layout_marginTop">5dp</item>
                <item name="android:layout_marginBottom">3dp</item>
                <item name="android:layout_marginRight">5dp</item>
                <item name="android:layout_marginLeft">5dp</item>
                <item name="android:layout_weight">1</item>
            </style>
		    <style name="ActionBarAction">
		        <item name="android:layout_width">@dimen/actionbar_height</item>
		        <item name="android:layout_height">fill_parent</item>
		        <item name="android:clickable">true</item>
		        <item name="android:padding">@dimen/title_action_padding</item>
		        <item name="android:background">@drawable/ab_action</item>
		        <item name="android:focusable">true</item>
		    </style>
		    <style name="ActionBarSpinner" parent="@android:style/Widget.ProgressBar.Small">
		        <item name="android:layout_width">@dimen/actionbar_height</item>
		        <item name="android:layout_height">fill_parent</item>
		        <item name="android:clickable">true</item>
		        <item name="android:padding">@dimen/title_action_padding</item>
		    </style>
		    <style name="ActionBarSeparator">
		        <item name="android:layout_width">2px</item>
		        <item name="android:layout_height">@dimen/actionbar_height</item>
	            <item name="android:background">@drawable/actionbar_seperator</item>
		    </style>
    
    <style name="Dashboard">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:padding">2dp</item>
    </style>
	    <style name="DashboardRow" parent="FullWidth">
	        <item name="android:orientation">horizontal</item>
	        <item name="android:layout_weight">1</item>
	    </style>
		    <style name="DashboardButton">
		        <item name="android:layout_gravity">center_vertical</item>
		        <item name="android:layout_width">100dp</item>
		        <item name="android:layout_height">wrap_content</item>
                <item name="android:layout_weight">1</item>
                <item name="android:layout_margin">2dp</item>
		        <item name="android:gravity">center_horizontal</item>
		        <item name="android:textSize">16sp</item>
                <item name="android:textStyle">normal</item>
                <item name="android:textColor">@color/text_grey</item>
		        <item name="android:background">@drawable/dashboard_bg</item>
                <item name="android:paddingTop">20dp</item>
                <item name="android:paddingBottom">20dp</item>
		    </style>
        <style name="DashboardExtra" parent="FullWidth">
            <item name="android:layout_weight">1</item>
            <item name="android:layout_height">300dp</item>
            <item name="android:background">@color/consy_dark_green</item>
    	    <item name="android:foreground">@drawable/dashboard_extra_top</item>
    	    <item name="android:foregroundGravity">top|fill_horizontal</item>
        </style>
            <style name="DashboardExtraMap" parent="FillAll">
                <item name="android:layout_weight">1</item>
            </style>
    
    <style name="EventListHeadingWrapper" parent="FullWidth">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">41dp</item>
    </style>
	    <style name="EventListHeading" parent="FullWidth">
	        <item name="android:orientation">horizontal</item>
            <item name="android:layout_height">40dp</item>
            <item name="android:gravity">center_vertical</item>
            <item name="android:layout_marginLeft">10dp</item>
	    </style>
            <style name="EventListHeadingChange">
                <item name="android:layout_width">30dp</item>
                <item name="android:layout_height">30dp</item>
                <item name="android:layout_marginRight">10dp</item>
            </style>
            <style name="EventListHeadingArrow">
                <item name="android:layout_width">30dp</item>
                <item name="android:layout_height">30dp</item>
                <item name="android:layout_marginRight">5dp</item>
                <item name="android:paddingTop">7dp</item>
                <item name="android:paddingBottom">10dp</item>
                <item name="android:paddingLeft">6dp</item>
                <item name="android:paddingRight">5dp</item>
                <item name="android:gravity">center</item>
            </style>
	        <style name="EventListHeadingText" parent="WrapAll">
	            <item name="android:textSize">18sp</item>
	            <item name="android:textStyle">bold</item>
	            <item name="android:gravity">center_vertical</item>
	        </style>
        <style name="EventListHeadingBorder">
            <item name="android:layout_height">1dp</item>
            <item name="android:layout_width">fill_parent</item>
            <item name="android:background">@color/light_grey</item>
        </style>
        
        
    <style name="Event" parent="FullWidth">
        <item name="android:padding">5dp</item>
    </style>
	    <style name="EventTextSection" parent="FullWidth">
	        <item name="android:orientation">vertical</item>
	    </style>
        <style name="EventText" parent="Text">
            <item name="android:paddingRight">10dp</item>
            <item name="android:paddingLeft">10dp</item>
        </style>
	        <style name="EventWh" parent="EventText">
	            <item name="android:textSize">14sp</item>
	        </style>
		    <style name="EventDeEm" parent="EventText">
		        <item name="android:textSize">12sp</item>
		        <item name="android:textColor">@color/text_light_grey</item>
		    </style>
    
    <style name="EventView" parent="FillAll">
        <item name="android:padding">5dp</item>
    </style>
        <style name="EventViewTop" parent="FullWidth">
            <item name="android:orientation">horizontal</item>
        </style>
        <style name="EventViewMenu" parent="FullWidth">
            <item name="android:orientation">horizontal</item>
            <item name="android:padding">10dp</item>
            <item name="android:focusable">true</item>
            <item name="android:clickable">true</item>
        </style>
	        <style name="EventViewMenuText" parent="FullWidth">
	            <item name="android:textSize">16sp</item>
	        </style>
	
    <style name="EventNew" parent="FullWidth">
   		<item name="android:padding">0dp</item>
    </style>
	    <style name="EventNewOption" parent="FullWidth">
	    	<item name="android:orientation">horizontal</item>
	    </style>
            <style name="EventNewOptionTitle" parent="WrapAll">
                <item name="android:textStyle">bold</item>
                <item name="android:textSize">18sp</item>
                <item name="android:layout_width">75dp</item>
            </style>
            <style name="EventNewOptionInput" parent="FullWidth">
                <item name="android:textSize">18sp</item>
                <item name="android:textColorHint">#888888</item>
                <item name="android:background">@drawable/event_new_option</item>
                <item name="android:gravity">top|left</item>
                <item name="android:padding">10dp</item>
                <item name="android:clickable">true</item>
                <item name="android:focusable">true</item>
            </style>
		<style name="EventNewWho" parent="Toggle">
            <item name="android:layout_width">fill_parent</item>
            <item name="android:paddingTop">0dp</item>
            <item name="android:layout_marginTop">0dp</item>
            <item name="android:layout_marginRight">10dp</item>
            <item name="android:layout_marginLeft">10dp</item>
		</style>
        <style name="EventNewToggleRight" parent="ToggleRight">
            <item name="android:layout_width">fill_parent</item>
            <item name="android:layout_weight">1</item>
        </style>
        <style name="EventNewToggleLeft" parent="ToggleLeft">
            <item name="android:layout_width">fill_parent</item>
            <item name="android:layout_weight">1</item>
        </style>
		<style name="EventNewCategory" parent="FullWidth">
			<item name="android:orientation">vertical</item>
			<item name="android:layout_marginTop">5dp</item>
			<item name="android:layout_marginBottom">5dp</item>
		</style>
    
    <style name="AttendantsListItem" parent="FullWidth">
        <item name="android:padding">5dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">16sp</item>
    </style>
        <style name="AttendantsListItemAvatar" parent="Image">
            <item name="android:layout_width">50dp</item>
            <item name="android:layout_height">50dp</item>
            <item name="android:paddingRight">5dp</item>
        </style>
        <style name="AttendantsListItemTextSection" parent="FillAll">
            <item name="android:orientation">vertical</item>
        </style>
	        <style name="AttendantsListItemText" parent="WrapAll"></style>
	            <style name="AttendantsListItemUsername" parent="AttendantsListItemText">
	                <item name="android:textStyle">bold</item>
	                <item name="android:textColor">@color/link_blue</item>
	            </style>
	        <style name="AttendantsListItemStatus" parent="AttendantsListItemText">
	            <item name="android:textColor">#666666</item>
	            <item name="android:textSize">14sp</item>
	        </style>
     
     <style name="UserViewTop" parent="FullWidth">
         <item name="android:orientation">horizontal</item>
         <item name="android:gravity">center_vertical</item>
     </style>
         <style name="UserViewAvatar" parent="Image">
             <item name="android:layout_margin">5dp</item>
             <item name="android:layout_width">50dp</item>
             <item name="android:layout_height">50dp</item>
         </style>
         <style name="UserViewUsername" parent="WrapAll">
             <item name="android:textSize">24sp</item>
             <item name="android:textStyle">bold</item>
         </style>
         <style name="UserViewBefriend" parent="Button">
             <item name="android:textSize">14sp</item>
             <item name="android:layout_width">40dp</item>
             <item name="android:layout_height">40dp</item>
             <item name="android:layout_margin">5dp</item>
             <item name="android:paddingTop">10dp</item>
             <item name="android:paddingBottom">10dp</item>
             <item name="android:paddingLeft">0dp</item>
             <item name="android:paddingRight">40dp</item>
             <item name="android:src">@drawable/icon_friend_plus</item>
         </style>
     <style name="UserViewFreindListTitle" parent="FullWidth">
         <item name="android:textSize">14sp</item>
     </style>
     <style name="UserViewPendingFreindListTitle" parent="UserViewFreindListTitle">
         <item name="android:visibility">invisible</item>
     </style>
     
	<style name="UserListItem" parent="FullWidth">
	    <item name="android:padding">5dp</item>
	    <item name="android:layout_height">60dp</item>
	    <item name="android:textSize">16sp</item>
	</style>
       <style name="UserListItemMiddle" parent="FullHeight">
           <item name="android:layout_weight">1</item>
           <item name="android:orientation">vertical</item>
           <item name="android:gravity">center_vertical</item>
       </style>
        <style name="UserListItemUsername" parent="WrapAll">
            <item name="android:textStyle">bold</item>
            <item name="android:textColor">@color/link_blue</item>
            <item name="android:textSize">18sp</item>
        </style>
        <style name="UserListItemDetail" parent="FullWidth">
            <item name="android:textSize">16sp</item>
        </style>
       <style name="UserListItemConfirm">
           <item name="android:textSize">14sp</item>
           <item name="android:visibility">invisible</item>
           <item name="android:layout_width">50dp</item>
           <item name="android:layout_height">50dp</item>
       </style>
	   <style name="UserSelectorDone" parent="FullWidth">
	       <item name="android:orientation">horizontal</item>
	       <item name="android:layout_height">@dimen/actionbar_height</item>
	   </style>

    <style name="CommentList">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
</resources>
