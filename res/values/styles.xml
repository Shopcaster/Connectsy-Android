<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Theme" parent="android:Theme"></style>
    <style name="Theme.Consy" parent="android:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="Spring">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="FullWidth">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    </style>
    <style name="FullHeight">
    	<item name="android:layout_height">fill_parent</item>
    	<item name="android:layout_width">wrap_content</item>
    </style>
    <style name="WrapAll">
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    </style>
    <style name="FillAll">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="Text" parent="WrapAll">
        <item name="android:textColor">@color/text_grey</item>
    </style>
    
    <style name="FormElementTitle" parent="Text">
    	<item name="android:textSize">18dp</item>
    	<item name="android:paddingRight">5dp</item>
    </style>
    <style name="FormElementValue" parent="FormElementTitle">
    	<item name="android:textStyle">italic</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="Image" parent="WrapAll">
        <item name="android:background">@drawable/image_bg</item>
    </style>
	    <style name="Avatar" parent="Image">
            <item name="android:layout_marginRight">5dp</item>
	        <item name="android:layout_width">50dp</item>
	        <item name="android:layout_height">50dp</item>
	    </style>
    
    <style name="Button" parent="WrapAll">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">10dp</item>
    </style>
    
    <style name="Toggle" parent="WrapAll">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">5dp</item>
    </style>
        <style name="ToggleButton" parent="Button">
            <item name="android:layout_margin">0dp</item>
        </style>
            <style name="ToggleLeft" parent="ToggleButton">
                <item name="android:background">@drawable/toggle_button_left</item>
            </style>
            <style name="ToggleMiddle" parent="ToggleButton">
                <item name="android:background">@drawable/toggle_button_middle</item>
            </style>
            <style name="ToggleRight" parent="ToggleButton">
                <item name="android:background">@drawable/toggle_button_right</item>
            </style>
    
    <style name="TabBar" parent="FullWidth">
        <item name="android:orientation">horizontal</item>
    </style>
        <style name="TabBarButton" parent="Button">
            <item name="android:layout_margin">0dp</item>
            <item name="android:layout_width">fill_parent</item>
            <item name="android:layout_weight">1</item>
            <item name="android:background">@drawable/tabbar_button</item>
        </style>
        <style name="TabBarButtonLeft" parent="TabBarButton">
            <item name="android:background">@drawable/tabbar_button_left</item>
        </style>
        <style name="TabBarButtonRight" parent="TabBarButton">
            <item name="android:background">@drawable/tabbar_button_right</item>
        </style>
    
    <style name="BorderWrapperVert" parent="FullWidth">
        <item name="android:orientation">vertical</item>
    </style>
	    <style name="BorderVert" parent="FullWidth">
            <item name="android:layout_height">1dp</item>
            <item name="android:background">#ffcccccc</item>
	    </style>
        
    <style name="ListTitle" parent="FullWidth">
        <item name="android:orientation">vertical</item>
    </style>
        <style name="ListTitleText" parent="FullWidth">
            <item name="android:textSize">16sp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textColor">#000000</item>
            <item name="android:paddingRight">5dp</item>
            <item name="android:paddingLeft">5dp</item>
            <item name="android:background">#66eeeeee</item>
        </style>
        <style name="ListTitleBorder">
            <item name="android:layout_height">1dp</item>
            <item name="android:layout_width">fill_parent</item>
            <item name="android:background">#ffcccccc</item>
        </style>
        <style name="ListTitleBorderTop" parent="EventNewTitleBorder">
            <item name="android:background">#ff999999</item>
        </style>
        
    <style name="Link" parent="WrapAll">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/link_blue</item>
    </style>
    
    <style name="ActionBarFrame">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/actionbar_height</item>
    </style>
        <style name="ActionBarBackground">
            <item name="android:layout_width">fill_parent</item>
            <item name="android:layout_height">@dimen/actionbar_height</item>
            <item name="android:background">@drawable/actionbar_bg</item>
        </style>
        <style name="ActionBar">
            <item name="android:layout_width">fill_parent</item>
            <item name="android:layout_height">@dimen/actionbar_height</item>
            <item name="android:orientation">horizontal</item>
            <item name="android:gravity">center_vertical</item>
        </style>
            <style name="ActionBarLogo" parent="@style/WrapAll">
                <item name="android:src">@drawable/logo</item>
            </style>
            <style name="ActionBarSearch" parent="@style/FullWidth">
                <item name="android:layout_marginTop">5dp</item>
                <item name="android:layout_marginBottom">3dp</item>
                <item name="android:layout_marginRight">5dp</item>
                <item name="android:layout_marginLeft">5dp</item>
                <item name="android:layout_weight">1</item>
            </style>
		    <style name="ActionBarAction">
		        <item name="android:layout_width">@dimen/actionbar_height</item>
		        <item name="android:layout_height">fill_parent</item>
		        <item name="android:clickable">true</item>
		        <item name="android:padding">@dimen/title_action_padding</item>
		    </style>
		    <style name="ActionBarSpinner" parent="@android:style/Widget.ProgressBar.Small">
		        <item name="android:layout_width">@dimen/actionbar_height</item>
		        <item name="android:layout_height">fill_parent</item>
		        <item name="android:clickable">true</item>
		        <item name="android:padding">@dimen/title_action_padding</item>
		    </style>
		    <style name="ActionBarSeparator">
		        <item name="android:layout_width">2px</item>
		        <item name="android:layout_height">@dimen/actionbar_height</item>
	            <item name="android:src">@drawable/actionbar_seperator</item>
		    </style>
    
    <style name="Dashboard" parent="FullWidth">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">400dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:padding">2dp</item>
    </style>
	    <style name="DashboardRow" parent="FullWidth">
	        <item name="android:orientation">horizontal</item>
	        <item name="android:layout_weight">1</item>
	        <item name="android:padding">6dp</item>
	    </style>
		    <style name="DashboardButton">
		        <item name="android:layout_gravity">center_vertical</item>
		        <item name="android:layout_width">115dp</item>
		        <item name="android:layout_height">wrap_content</item>
                <item name="android:layout_weight">1</item>
                <item name="android:layout_margin">2dp</item>
		        <item name="android:gravity">center_horizontal</item>
		        <item name="android:textSize">16sp</item>
                <item name="android:textStyle">normal</item>
                <item name="android:textColor">@color/text_grey</item>
		        <item name="android:background">@null</item>
		    </style>
        <style name="DashboardExtra" parent="FullWidth">
            <item name="android:layout_weight">1</item>
            <item name="android:layout_height">300dp</item>
            <item name="android:background">@color/consy_dark_green</item>
        </style>
            <style name="DashboardExtraBackgroundTop" parent="FullWidth">
                <item name="android:layout_height">5dp</item>
                <item name="android:background">@drawable/dashboard_extra_top</item>
            </style>
            <style name="DashboardExtraMap" parent="FillAll">
                <item name="android:layout_weight">1</item>
            </style>
    
    <style name="EventListHeadingWrapper" parent="FullWidth">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">41dp</item>
    </style>
	    <style name="EventListHeading" parent="FullWidth">
	        <item name="android:orientation">horizontal</item>
            <item name="android:layout_height">40dp</item>
            <item name="android:gravity">center_vertical</item>
            <item name="android:layout_marginLeft">10dp</item>
	    </style>
            <style name="EventListHeadingChange">
                <item name="android:layout_width">30dp</item>
                <item name="android:layout_height">30dp</item>
                <item name="android:layout_marginRight">10dp</item>
            </style>
            <style name="EventListHeadingArrow">
                <item name="android:layout_width">30dp</item>
                <item name="android:layout_height">30dp</item>
                <item name="android:layout_marginRight">5dp</item>
                <item name="android:paddingTop">7dp</item>
                <item name="android:paddingBottom">10dp</item>
                <item name="android:paddingLeft">6dp</item>
                <item name="android:paddingRight">5dp</item>
                <item name="android:gravity">center</item>
            </style>
	        <style name="EventListHeadingText" parent="WrapAll">
	            <item name="android:textSize">18sp</item>
	            <item name="android:textStyle">bold</item>
	            <item name="android:gravity">center_vertical</item>
	        </style>
        <style name="EventListHeadingBorder">
            <item name="android:layout_height">1dp</item>
            <item name="android:layout_width">fill_parent</item>
            <item name="android:background">@color/light_grey</item>
        </style>
        
        
    <style name="Event" parent="FullWidth">
        <item name="android:padding">5dp</item>
    </style>
	    <style name="EventTextSection" parent="FullWidth">
	        <item name="android:orientation">vertical</item>
	    </style>
        <style name="EventText" parent="Text">
            <item name="android:padding">0dp</item>
            <item name="android:layout_marginTop">-4dp</item>
        </style>
	        <style name="EventWh" parent="EventText">
	            <item name="android:textSize">14sp</item>
	        </style>
		    <style name="EventDeEm" parent="EventText">
                <item name="android:layout_marginTop">-1dp</item>
		        <item name="android:textSize">12sp</item>
		        <item name="android:textColor">@color/text_light_grey</item>
		    </style>
    
    <style name="EventView" parent="FillAll">
        <item name="android:padding">5dp</item>
    </style>
        <style name="EventViewTop" parent="FullWidth">
            <item name="android:orientation">horizontal</item>
        </style>
            <style name="EventViewAvatar" parent="Avatar">
                <item name="android:layout_width">90dp</item>
                <item name="android:layout_height">90dp</item>
            </style>
	
    <style name="EventNew" parent="FullWidth">
   		<item name="android:padding">0dp</item>
    </style>
	    <style name="EventNewTitle" parent="ListTitle">
	    	<item name="android:paddingTop">10dp</item>
	    	<item name="android:paddingBottom">5dp</item>
	    </style>
		    <style name="EventNewTitleText" parent="ListTitleText">
		        <item name="android:layout_width">wrap_content</item>
		    </style>
            <style name="EventNewTitleBorder" parent="ListTitleBorder">
            </style>
            <style name="EventNewTitleBorderTop" parent="EventNewTitleBorder">
                <item name="android:background">#ff999999</item>
            </style>
	    <style name="EventNewField" parent="FullWidth">
            <item name="android:layout_marginRight">5dp</item>
            <item name="android:layout_marginLeft">5dp</item>
	    </style>
            <style name="EventNewEditText" parent="EventNewField">
                <item name="android:autoText">true</item>
                <item name="android:capitalize">sentences</item>
            </style>
		    <style name="EventNewWho" parent="Toggle">
                <item name="android:layout_width">fill_parent</item>
		    </style>
                <style name="EventNewWhoFriends" parent="ToggleLeft">
                   <item name="android:state_selected">true</item>
                   <item name="android:layout_width">fill_parent</item>
                   <item name="android:layout_weight">1</item>
                </style>
                <style name="EventNewWhoEveryone" parent="ToggleMiddle">
                   <item name="android:layout_width">fill_parent</item>
                   <item name="android:layout_weight">1</item>
                </style>
                <style name="EventNewWhoChoose" parent="ToggleRight">
                   <item name="android:layout_width">fill_parent</item>
                   <item name="android:layout_weight">1</item>
                </style>
            <style name="EventNewCategory" parent="FullWidth">
                <item name="android:orientation">vertical</item>
                <item name="android:layout_marginTop">5dp</item>
                <item name="android:layout_marginBottom">5dp</item>
            </style>
    
    <style name="AttendantsListItem" parent="FullWidth">
        <item name="android:padding">5dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">16sp</item>
    </style>
        <style name="AttendantsListItemAvatar" parent="Image">
            <item name="android:layout_width">50dp</item>
            <item name="android:layout_height">50dp</item>
            <item name="android:paddingRight">5dp</item>
        </style>
        <style name="AttendantsListItemTextSection" parent="FillAll">
            <item name="android:orientation">vertical</item>
        </style>
	        <style name="AttendantsListItemText" parent="WrapAll"></style>
	            <style name="AttendantsListItemUsername" parent="AttendantsListItemText">
	                <item name="android:textStyle">bold</item>
	                <item name="android:textColor">@color/link_blue</item>
	            </style>
	        <style name="AttendantsListItemStatus" parent="AttendantsListItemText">
	            <item name="android:textColor">#666666</item>
	            <item name="android:textSize">14sp</item>
	        </style>
     
     <style name="UserViewTop" parent="FullWidth">
         <item name="android:orientation">horizontal</item>
         <item name="android:gravity">center_vertical</item>
     </style>
         <style name="UserViewAvatar" parent="Image">
             <item name="android:layout_margin">5dp</item>
             <item name="android:layout_width">50dp</item>
             <item name="android:layout_height">50dp</item>
         </style>
         <style name="UserViewUsername" parent="WrapAll">
             <item name="android:textSize">24sp</item>
             <item name="android:textStyle">bold</item>
         </style>
         <style name="UserViewBefriend" parent="Button">
             <item name="android:textSize">14sp</item>
             <item name="android:layout_width">40dp</item>
             <item name="android:layout_height">40dp</item>
             <item name="android:layout_margin">5dp</item>
         </style>
     <style name="UserViewFreindListTitle" parent="FullWidth">
         <item name="android:textSize">14sp</item>
     </style>
     <style name="UserViewPendingFreindListTitle" parent="UserViewFreindListTitle">
         <item name="android:visibility">invisible</item>
     </style>
     
     
	<style name="UserListItem" parent="FullWidth">
	    <item name="android:padding">5dp</item>
	    <item name="android:layout_height">60dp</item>
	    <item name="android:textSize">16sp</item>
	</style>
	    <style name="UserListItemAvatar" parent="Image">
	        <item name="android:layout_width">50dp</item>
	        <item name="android:layout_height">50dp</item>
	        <item name="android:layout_marginRight">5dp</item>
	    </style>
	       <style name="UserListItemMiddle" parent="FullHeight">
	           <item name="android:layout_weight">1</item>
	           <item name="android:orientation">vertical</item>
	           <item name="android:gravity">center_vertical</item>
	       </style>
	        <style name="UserListItemUsername" parent="FullWidth">
	            <item name="android:textStyle">bold</item>
	            <item name="android:textColor">@color/link_blue</item>
	               <item name="android:textSize">18sp</item>
	        </style>
	       <style name="UserListItemConfirm">
	           <item name="android:textSize">14sp</item>
	           <item name="android:visibility">invisible</item>
	           <item name="android:layout_width">50dp</item>
	           <item name="android:layout_height">50dp</item>
	       </style>
	   <style name="UserSelectorDone" parent="FullWidth">
	       <item name="android:orientation">horizontal</item>
	       <item name="android:layout_height">@dimen/actionbar_height</item>
	   </style>

    <style name="CommentList">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
</resources>
