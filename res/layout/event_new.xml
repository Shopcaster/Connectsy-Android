<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/events_new">
    
    <FrameLayout style="@style/ActionBarFrame"
        android:layout_alignParentTop="true">
        <ImageView style="@style/ActionBarBackground" />
        <LinearLayout style="@style/ActionBar" >
            <ImageView style="@style/ActionBarLogo" />
            <View style="@style/Spring" />
        </LinearLayout>
    </FrameLayout>
    
    <LinearLayout style="@style/FullWidth"
        android:layout_alignParentBottom="true"
        android:id="@+id/events_new_submit_wrapper"
        android:orientation="horizontal">
        <View style="@style/Spring" />
        <Button style="@style/Button"
            android:text="@string/events_new_button_submit"
            android:id="@+id/events_new_submit" />
    </LinearLayout>
    
	<ScrollView style="@style/FullWidth"
        android:layout_below="@id/events_new"
        android:layout_marginTop="@dimen/actionbar_height"
        android:layout_above="@id/events_new_submit_wrapper"
        android:id="@+id/events_new_scroller">
	<LinearLayout style="@style/EventNew"
		android:orientation="vertical" >
        
        <LinearLayout style="@style/EventNewTitle" >
            <View style="@style/EventNewTitleBorderTop" />
            <LinearLayout style="@style/FullWidth"
                android:orientation="horizontal"
                android:background="#66eeeeee">
                <TextView style="@style/EventNewTitleText"
                    android:text="@string/events_new_title_what" />
                <View style="@style/Spring" />
                <TextView style="@style/Text"
                    android:layout_marginRight="5dp"
                    android:id="@+id/events_new_chars_what" />
                
            </LinearLayout>
            <View style="@style/EventNewTitleBorder" />
        </LinearLayout>
        <EditText style="@style/EventNewEditText"
            android:hint="@string/events_new_desc"
            android:maxLength="150"
            android:id="@+id/events_new_what" />
	    
		<LinearLayout style="@style/EventNewTitle"
			android:paddingTop="0dp" >
            <View style="@style/EventNewTitleBorderTop" />
            <LinearLayout style="@style/FullWidth"
                android:orientation="horizontal" >
                <TextView style="@style/EventNewTitleText"
                    android:text="@string/events_new_title_where" />
                <View style="@style/Spring" />
                <TextView style="@style/Text"
                    android:layout_marginRight="5dp"
                    android:id="@+id/events_new_chars_where" />
                
            </LinearLayout>
			<View style="@style/EventNewTitleBorder" />
		</LinearLayout>
		<EditText style="@style/EventNewEditText"
		    android:hint="@string/events_new_where"
            android:maxLength="25"
		    android:id="@+id/events_new_where" />
		
		<LinearLayout style="@style/EventNewTitle" >
            <View style="@style/EventNewTitleBorderTop" />
			<TextView style="@style/EventNewTitleText"
				android:text="@string/events_new_title_when" />
			<View style="@style/EventNewTitleBorder" />
		</LinearLayout>
		
			<LinearLayout style="@style/EventNewField"
			    android:layout_height="wrap_content" >
				<TextView style="@style/FormElementTitle"
					android:text="@string/events_new_date_title" />
				<TextView style="@style/FormElementValue"
					android:text="@string/events_new_date_default"
					android:id="@+id/events_new_date" />
				<Button style="@style/Button"
					android:text="@string/events_new_button_change"
					android:id="@+id/events_new_date_change" />
			</LinearLayout>
			
			<LinearLayout style="@style/EventNewField"
			    android:layout_height="wrap_content" >
				<TextView style="@style/FormElementTitle"
					android:text="@string/events_new_time_title" />
				<TextView style="@style/FormElementValue"
					android:text="@string/events_new_time_default"
					android:id="@+id/events_new_time" />
				<Button style="@style/Button"
					android:text="@string/events_new_button_change"
					android:id="@+id/events_new_time_change" />
			</LinearLayout>
		
		
		<LinearLayout style="@style/EventNewTitle" >
            <View style="@style/EventNewTitleBorderTop" />
			<TextView style="@style/EventNewTitleText"
				android:text="@string/events_new_title_who" />
			<View style="@style/EventNewTitleBorder" />
		</LinearLayout>
        
        <LinearLayout style="@style/EventNewWho">
            <Button style="@style/EventNewWhoFriends"
                android:text="Friends"
                android:id="@+id/events_new_who_friends" />
            <Button style="@style/EventNewWhoEveryone"
                android:text="Everyone"
                android:id="@+id/events_new_who_everyone" />
            <Button style="@style/EventNewWhoChoose"
                android:text="Choose"
                android:id="@+id/events_new_who_choose" />
        </LinearLayout>
        
        <LinearLayout style="@style/EventNewCategory"
            android:clickable="true" 
            android:visibility="gone"
            android:id="@+id/events_new_cat"
            android:focusable="true">
            <View style="@style/EventNewTitleBorder" />
            <LinearLayout style="@style/FullWidth"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:orientation="horizontal">
	            <TextView style="@style/FormElementTitle"
	                 android:id="@+id/events_new_category_title"
	                 android:text="Select a Category" />
                <View style="@style/Spring" />
                <ImageView style="@style/EventListHeadingChange"
                    android:src="@drawable/icon_right_arrow"/>
            </LinearLayout>
            <View style="@style/EventNewTitleBorder" />
        </LinearLayout>
        
        <LinearLayout style="@style/EventNewCategory"
            android:clickable="true" 
            android:visibility="gone"
            android:id="@+id/events_new_friends_selected"
            android:focusable="true">
            <View style="@style/EventNewTitleBorder" />
            <LinearLayout style="@style/FullWidth"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:orientation="horizontal">
	            <TextView style="@style/FormElementTitle"
	                 android:id="@+id/events_new_friends_selected_text"
	                 android:text="Select Friends" />
	            <View style="@style/Spring" />
	            <ImageView style="@style/EventListHeadingChange"
	                android:src="@drawable/icon_right_arrow"/>
            </LinearLayout>
            <View style="@style/EventNewTitleBorder" />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>