<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="false">        
        <shape>
            <gradient
                android:startColor="@color/button_start"
                android:endColor="@color/button_end"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/button_stroke" />
            <corners
                android:topLeftRadius="3dp"
                android:bottomLeftRadius="0dp"
                android:topRightRadius="3dp"
                android:bottomRightRadius="0dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    
    <item android:state_selected="true">
        <shape>
            <gradient
                android:startColor="@color/highlight_button_start"
                android:endColor="@color/highlight_button_end"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/button_stroke" />
            <corners
                android:topLeftRadius="3dp"
                android:bottomLeftRadius="0dp"
                android:topRightRadius="3dp"
                android:bottomRightRadius="0dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>