<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/FillAll"
    android:orientation="horizontal"
    android:padding="5dp">
    
    <ImageView style="@style/Avatar"
        android:src="@drawable/avatar_default"
        android:id="@+id/notification_list_item_avatar" />
    
    <LinearLayout style="@style/FullWidth"
        android:orientation="vertical">
        <TextView style="@style/Text"
            android:id="@+id/notification_list_item_title"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <TextView style="@style/Text"
            android:id="@+id/notification_list_item_body"/>
    </LinearLayout>
    
</LinearLayout>